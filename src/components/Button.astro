---
interface Props {
    href: string,
    label: String
}

const {href, label} = Astro.props;
---

<div class="hover:bg-slate-500/20 text-gray-200 flex gap-x-2 items-center cursor-pointer font-medium text-sm rounded-xl px-4 py-2.5 me-2 mb-2 border-[1px] border-slate-500/20 duration-100 ease-in-out transform">
    <slot />
    <a target="_blank" href={href}>{label}</a>
</div>
